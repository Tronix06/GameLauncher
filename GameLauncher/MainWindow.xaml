<Window x:Class="GameLauncher.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="BiTronix"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None" 
        AllowsTransparency="True"
        Background="Transparent">

    <Window.Resources>
        <Style x:Key="InputGlowBorder" TargetType="Border">
            <Setter Property="Background" Value="#202020"/>
            <Setter Property="CornerRadius" Value="5"/>
            <Setter Property="BorderBrush" Value="#444444"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Height" Value="40"/>
            <Style.Triggers>
                <Trigger Property="IsKeyboardFocusWithin" Value="True">
                    <Setter Property="BorderBrush" Value="#00C3FF"/>
                    <Setter Property="Effect">
                        <Setter.Value>
                            <DropShadowEffect Color="#00C3FF" BlurRadius="8" ShadowDepth="0" Opacity="0.4"/>
                        </Setter.Value>
                    </Setter>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="ModernCheckBox" TargetType="CheckBox">
            <Setter Property="Foreground" Value="#AAAAAA"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="CheckBox">
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                            <Border x:Name="border" Width="16" Height="16" CornerRadius="3" BorderBrush="#666666" BorderThickness="1" Background="#202020" Margin="0,0,8,0">
                                <Path x:Name="check" Data="M 3,8 L 6,11 L 13,4" Stroke="White" StrokeThickness="2" Visibility="Collapsed"/>
                            </Border>
                            <ContentPresenter VerticalAlignment="Center"/>
                        </StackPanel>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#0074E0"/>
                                <Setter TargetName="border" Property="BorderBrush" Value="#0074E0"/>
                                <Setter TargetName="check" Property="Visibility" Value="Visible"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="BorderBrush" Value="#00C3FF"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="BotonAccion" TargetType="Button">
            <Setter Property="Background" Value="#0074E0"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="borde" Background="{TemplateBinding Background}" CornerRadius="5">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="borde" Property="Background" Value="#3399FF"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="BotonTransparente" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="borde" Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="borde" Property="Background" Value="#1AFFFFFF"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="BotonSocial" TargetType="Button">
            <Setter Property="Width" Value="40"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="Margin" Value="10,0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="borde" CornerRadius="20" Background="{TemplateBinding Background}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="borde" Property="Opacity" Value="0.8"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="BotonOjo" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#666666"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="Transparent">
                            <TextBlock Text="&#xE7B3;" FontFamily="Segoe MDL2 Assets" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="14" Foreground="{TemplateBinding Foreground}"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Foreground" Value="White"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Viewbox Stretch="Uniform">
        <Border CornerRadius="15" BorderBrush="#333333" BorderThickness="1" Width="400" Height="600">
            <Border.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                    <GradientStop Color="#090E16" Offset="0.0"/>
                    <GradientStop Color="#121826" Offset="0.5"/>
                    <GradientStop Color="#201035" Offset="1.0"/>
                </LinearGradientBrush>
            </Border.Background>

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="90"/>
                    <RowDefinition Height="50"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <Grid Grid.Row="0" Background="Transparent" MouseLeftButtonDown="Window_MouseLeftButtonDown">
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Center">
                        <Image Source="logo.png" Width="60" Height="60" Margin="0,0,15,0" RenderOptions.BitmapScalingMode="HighQuality"/>
                        <TextBlock FontSize="28" FontWeight="Bold" FontFamily="Segoe UI" VerticalAlignment="Center">
                            <Run Text="Bi" Foreground="#00C3FF"/>
                            <Run Text="Tronix" Foreground="White"/>
                        </TextBlock>
                    </StackPanel>

                    <Button Content="X" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,15,15,0" Width="30" Height="30" 
                            Style="{StaticResource BotonTransparente}" Foreground="#888888" FontWeight="Bold" FontSize="14"
                            Click="BtnSalir_Click"/>
                </Grid>

                <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center">
                    <Button x:Name="btnTabLogin" Content="INICIAR SESIÓN" Width="140" Height="40" 
                            Style="{StaticResource BotonTransparente}"
                            Foreground="#0074E0" FontWeight="Bold" BorderThickness="0,0,0,2" BorderBrush="#0074E0"
                            Click="BtnTabLogin_Click"/>

                    <Button x:Name="btnTabRegistro" Content="CREAR CUENTA" Width="140" Height="40" 
                            Style="{StaticResource BotonTransparente}"
                            Foreground="#777777" FontWeight="Bold" BorderThickness="0"
                            Click="BtnTabRegistro_Click"/>
                </StackPanel>

                <Grid Grid.Row="2" Margin="40,20,40,30">

                    <StackPanel x:Name="PanelLogin" Visibility="Visible">

                        <TextBlock Text="USUARIO" Foreground="#AAAAAA" FontSize="11" Margin="0,0,0,5" FontWeight="Bold"/>
                        <Border Style="{StaticResource InputGlowBorder}">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="40"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Text="&#xE77B;" FontFamily="Segoe MDL2 Assets" Foreground="#888888" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="16"/>
                                <TextBox x:Name="txtUsuarioLogin" KeyDown="Input_KeyDown" Grid.Column="1" Background="Transparent" BorderThickness="0" Foreground="White" VerticalContentAlignment="Center" FontSize="14" Padding="0,0,10,0" CaretBrush="White"/>
                            </Grid>
                        </Border>

                        <TextBlock Text="CONTRASEÑA" Foreground="#AAAAAA" FontSize="11" Margin="0,15,0,5" FontWeight="Bold"/>
                        <Border Style="{StaticResource InputGlowBorder}">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="40"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="40"/>
                                </Grid.ColumnDefinitions>

                                <TextBlock Text="&#xE72E;" FontFamily="Segoe MDL2 Assets" Foreground="#888888" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="16"/>

                                <PasswordBox x:Name="txtPasswordLogin" KeyDown="Input_KeyDown" Grid.Column="1" Background="Transparent" BorderThickness="0" Foreground="White" VerticalContentAlignment="Center" FontSize="14" Padding="0,0,10,0" CaretBrush="White"/>
                                <TextBox x:Name="txtPasswordLoginVisible" Visibility="Collapsed" Grid.Column="1" Background="Transparent" BorderThickness="0" Foreground="White" VerticalContentAlignment="Center" FontSize="14" Padding="0,0,10,0" CaretBrush="White"/>

                                <Button x:Name="btnOjoLogin" Grid.Column="2" Style="{StaticResource BotonOjo}" Click="TogglePassLogin_Click"/>
                            </Grid>
                        </Border>

                        <Grid Margin="0,10,0,25">
                            <CheckBox x:Name="chkRecordarme" Content="Recordarme" Style="{StaticResource ModernCheckBox}" VerticalAlignment="Center"/>
                            <TextBlock Text="¿No puedes entrar?" Foreground="#0074E0" HorizontalAlignment="Right" Cursor="Hand" TextDecorations="Underline"  FontSize="12" VerticalAlignment="Center" MouseLeftButtonDown="WIP_Click"/>
                        </Grid>

                        <Button x:Name="btnLogin" Content="ENTRAR AHORA" Height="45" Style="{StaticResource BotonAccion}" Click="BtnLogin_Click"/>
                        <TextBlock x:Name="lblMensajeLogin" Text="" Foreground="#FF4444" HorizontalAlignment="Center" Margin="0,10,0,0" FontSize="12"/>

                        <Grid Margin="0,25,0,15">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Separator Grid.Column="0" Background="#333333"/>
                            <TextBlock Grid.Column="1" Text="O inicia con" Foreground="#666666" Margin="10,0" FontSize="11"/>
                            <Separator Grid.Column="2" Background="#333333"/>
                        </Grid>

                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                            <Button Style="{StaticResource BotonSocial}" Background="#DB4437" ToolTip="Iniciar con Google" Click="WIP_Click">
                                <TextBlock Text="G" Foreground="White" FontWeight="Bold" FontSize="18"/>
                            </Button>
                            <Button Style="{StaticResource BotonSocial}" Background="#333333" ToolTip="Iniciar con GitHub" Click="WIP_Click">
                                <TextBlock Text="Git" Foreground="White" FontWeight="Bold" FontSize="12"/>
                            </Button>
                            <Button Style="{StaticResource BotonSocial}" Background="#107C10" ToolTip="Iniciar con Xbox Live" Click="WIP_Click">
                                <TextBlock Text="X" Foreground="White" FontWeight="Bold" FontSize="18"/>
                            </Button>
                        </StackPanel>
                    </StackPanel>

                    <StackPanel x:Name="PanelRegistro" Visibility="Collapsed" Opacity="0">
                        <TextBlock Text="NUEVO USUARIO" Foreground="#AAAAAA" FontSize="11" Margin="0,0,0,5" FontWeight="Bold"/>
                        <Border Style="{StaticResource InputGlowBorder}">
                            <TextBox x:Name="txtUsuarioRegistro" KeyDown="Input_KeyDown" Background="Transparent" BorderThickness="0" Foreground="White" VerticalContentAlignment="Center" FontSize="14" Padding="10,0"/>
                        </Border>

                        <TextBlock Text="EMAIL" Foreground="#AAAAAA" FontSize="11" Margin="0,15,0,5" FontWeight="Bold"/>
                        <Border Style="{StaticResource InputGlowBorder}">
                            <TextBox x:Name="txtEmailRegistro" KeyDown="Input_KeyDown" Background="Transparent" BorderThickness="0" Foreground="White" VerticalContentAlignment="Center" FontSize="14" Padding="10,0"/>
                        </Border>

                        <TextBlock Text="CONTRASEÑA" Foreground="#AAAAAA" FontSize="11" Margin="0,15,0,5" FontWeight="Bold"/>
                        <Border Style="{StaticResource InputGlowBorder}">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="40"/>
                                </Grid.ColumnDefinitions>
                                <PasswordBox x:Name="txtPasswordRegistro" KeyDown="Input_KeyDown" Grid.Column="0" Background="Transparent" BorderThickness="0" Foreground="White" VerticalContentAlignment="Center" FontSize="14" Padding="10,0" CaretBrush="White"/>
                                <TextBox x:Name="txtPasswordRegistroVisible" Visibility="Collapsed" Grid.Column="0" Background="Transparent" BorderThickness="0" Foreground="White" VerticalContentAlignment="Center" FontSize="14" Padding="10,0" CaretBrush="White"/>
                                <Button x:Name="btnOjoRegistro" Grid.Column="1" Style="{StaticResource BotonOjo}" Click="TogglePassRegistro_Click"/>
                            </Grid>
                        </Border>

                        <Button x:Name="btnRegistro" Content="CREAR CUENTA GRATIS" Height="45" Margin="0,30,0,0" Style="{StaticResource BotonAccion}" Click="BtnRegistro_Click"/>
                        <TextBlock x:Name="lblMensajeRegistro" Text="" Foreground="#FF4444" HorizontalAlignment="Center" Margin="0,15,0,0"/>
                    </StackPanel>
                </Grid>
            </Grid>
        </Border>
    </Viewbox>
</Window>