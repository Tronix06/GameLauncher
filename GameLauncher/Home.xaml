<Window x:Class="GameLauncher.Home"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="BiTronix Home"
        WindowStartupLocation="Manual" 
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        ResizeMode="CanResizeWithGrip">

    <Window.Resources>
        <Style x:Key="BotonMenu" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#AAAAAA"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Height" Value="45"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="borde" Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}">
                            <Grid>
                                <Rectangle x:Name="indicador" HorizontalAlignment="Left" Width="4" Fill="#00C3FF" Visibility="Collapsed"/>
                                <StackPanel Orientation="Horizontal" Margin="20,0,0,0" VerticalAlignment="Center">
                                    <ContentPresenter/>
                                </StackPanel>
                            </Grid>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="borde" Property="Background" Value="#1AFFFFFF"/>
                                <Setter Property="Foreground" Value="White"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="BotonPerfil" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="borde" Background="{TemplateBinding Background}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Foreground" Value="#00C3FF"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="BotonControl" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#888888"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Width" Value="35"/>
            <Setter Property="Height" Value="35"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="borde" Background="{TemplateBinding Background}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="borde" Property="Background" Value="#33FFFFFF"/>
                                <Setter Property="Foreground" Value="White"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="BotonVista" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#666666"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Margin" Value="5,0,0,0"/>
            <Setter Property="Width" Value="30"/>
            <Setter Property="Height" Value="30"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="borde" Background="{TemplateBinding Background}" CornerRadius="5">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="borde" Property="Background" Value="#20FFFFFF"/>
                                <Setter Property="Foreground" Value="White"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="InputSettings" TargetType="TextBox">
            <Setter Property="Background" Value="#202020"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="10,0"/>
            <Setter Property="Height" Value="35"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border Background="{TemplateBinding Background}" CornerRadius="5" BorderBrush="#333333" BorderThickness="1">
                            <ScrollViewer x:Name="PART_ContentHost"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="InputSettingsPass" TargetType="PasswordBox">
            <Setter Property="Background" Value="#202020"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="10,0"/>
            <Setter Property="Height" Value="35"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="PasswordBox">
                        <Border Background="{TemplateBinding Background}" CornerRadius="5" BorderBrush="#333333" BorderThickness="1">
                            <ScrollViewer x:Name="PART_ContentHost"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="BotonOjoSmall" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#666666"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="Transparent">
                            <TextBlock Text="&#xE7B3;" FontFamily="Segoe MDL2 Assets" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="12" Foreground="{TemplateBinding Foreground}"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Foreground" Value="White"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Border CornerRadius="10" BorderBrush="#333333" BorderThickness="1">
        <Border.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                <GradientStop Color="#0F172A" Offset="0.0"/>
                <GradientStop Color="#151030" Offset="1.0"/>
            </LinearGradientBrush>
        </Border.Background>

        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="240"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <Border Grid.Column="0" Background="#101010" CornerRadius="10,0,0,10">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="20,30,0,40">
                        <Image Source="logo.png" Width="30" Height="30" Margin="0,0,10,0"/>
                        <TextBlock FontSize="20" FontWeight="Bold" FontFamily="Segoe UI" VerticalAlignment="Center">
                            <Run Text="Bi" Foreground="#00C3FF"/>
                            <Run Text="Tronix" Foreground="White"/>
                        </TextBlock>
                    </StackPanel>

                    <StackPanel Grid.Row="1">
                        <TextBlock Text="PRINCIPAL" Foreground="#555555" Margin="25,0,0,10" FontSize="10" FontWeight="Bold"/>

                        <Button x:Name="btnMenuTienda" Style="{StaticResource BotonMenu}" Foreground="White" Click="BtnMenuTienda_Click">
                            <Button.BorderThickness>4,0,0,0</Button.BorderThickness>
                            <Button.BorderBrush>#00C3FF</Button.BorderBrush>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="&#xE719;" FontFamily="Segoe MDL2 Assets" Margin="0,0,15,0" FontSize="16"/>
                                <TextBlock Text="TIENDA"/>
                            </StackPanel>
                        </Button>

                        <Button x:Name="btnMenuBiblioteca" Style="{StaticResource BotonMenu}" Click="BtnMenuBiblioteca_Click">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="&#xE8F1;" FontFamily="Segoe MDL2 Assets" Margin="0,0,15,0" FontSize="16"/>
                                <TextBlock Text="BIBLIOTECA"/>
                            </StackPanel>
                        </Button>

                        <Button Style="{StaticResource BotonMenu}" Click="WIP_Click">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="&#xE125;" FontFamily="Segoe MDL2 Assets" Margin="0,0,15,0" FontSize="16"/>
                                <TextBlock Text="COMUNIDAD"/>
                            </StackPanel>
                        </Button>

                        <TextBlock Text="SISTEMA" Foreground="#555555" Margin="25,30,0,10" FontSize="10" FontWeight="Bold"/>

                        <Button Style="{StaticResource BotonMenu}" Click="WIP_Click">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="&#xE896;" FontFamily="Segoe MDL2 Assets" Margin="0,0,15,0" FontSize="16"/>
                                <TextBlock Text="DESCARGAS"/>
                            </StackPanel>
                        </Button>

                        <Button Style="{StaticResource BotonMenu}" Click="BtnAbrirAjustes_Click">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="&#xE713;" FontFamily="Segoe MDL2 Assets" Margin="0,0,15,0" FontSize="16"/>
                                <TextBlock Text="AJUSTES"/>
                            </StackPanel>
                        </Button>
                    </StackPanel>
                </Grid>
            </Border>

            <Grid Grid.Column="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="60"/>
                    <RowDefinition Height="60"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="30"/>
                </Grid.RowDefinitions>

                <Grid Grid.Row="0" Background="Transparent" MouseLeftButtonDown="Window_MouseLeftButtonDown">
                    <Border HorizontalAlignment="Left" Width="300" Height="35" Margin="20,0,0,0" CornerRadius="17" Background="#20FFFFFF">
                        <Grid>
                            <TextBox x:Name="txtBuscador" Background="Transparent" BorderThickness="0" Foreground="White" 
                                     VerticalContentAlignment="Center" Margin="15,0,0,0"
                                     TextChanged="TxtBuscador_TextChanged"/>
                            <TextBlock Text="Buscar juegos..." IsHitTestVisible="False" Foreground="#888888" VerticalAlignment="Center" Margin="15,0,0,0" FontStyle="Italic">
                                <TextBlock.Style>
                                    <Style TargetType="TextBlock">
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding Text, ElementName=txtBuscador}" Value="">
                                                <Setter Property="Visibility" Value="Visible"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                        <Setter Property="Visibility" Value="Hidden"/>
                                    </Style>
                                </TextBlock.Style>
                            </TextBlock>
                        </Grid>
                    </Border>

                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,0,10,0">

                        <Button x:Name="btnAdmin" Click="BtnAdmin_Click" Visibility="Collapsed" Margin="0,0,20,0" Cursor="Hand" Background="Transparent" BorderThickness="0">
                            <Button.Template>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}" BorderBrush="#FFD700" BorderThickness="1" CornerRadius="5" Padding="10,5">
                                        <StackPanel Orientation="Horizontal">
                                            <TextBlock Text="🛡️" Margin="0,0,5,0" VerticalAlignment="Center"/>
                                            <TextBlock Text="PANEL ADMIN" Foreground="#FFD700" FontWeight="Bold" VerticalAlignment="Center" FontSize="11"/>
                                        </StackPanel>
                                    </Border>
                                </ControlTemplate>
                            </Button.Template>
                        </Button>
                        <Button Style="{StaticResource BotonPerfil}" Click="BtnAbrirPerfil_Click" ToolTip="Mi Perfil">
                            <TextBlock Text="Usuario" x:Name="txtNombrePerfil" Foreground="White" VerticalAlignment="Center" FontWeight="Bold"/>
                        </Button>

                        <Button Style="{StaticResource BotonPerfil}" Click="BtnAbrirPerfil_Click" Margin="10,0,15,0" ToolTip="Mi Perfil">
                            <Border x:Name="bordeAvatar" Width="35" Height="35" CornerRadius="20" BorderBrush="#00C3FF" BorderThickness="2">
                                <Border.Background>
                                    <ImageBrush ImageSource="logo.png"/>
                                </Border.Background>
                            </Border>
                        </Button>

                        <Button Content="⏻" ToolTip="Cerrar Sesión" Width="30" Height="30" Margin="0,0,10,0" 
                                Style="{StaticResource BotonPerfil}" Foreground="#FF4444" FontWeight="Bold" FontSize="16" 
                                Click="BtnCerrarSesion_Click"/>

                        <Button x:Name="btnToggleFriends" Content="👥" Width="30" Height="30" Margin="0,0,10,0" ToolTip="Lista de Amigos"
                                Style="{StaticResource BotonPerfil}" Foreground="#AAAAAA" FontWeight="Bold" FontSize="16" 
                                Click="BtnToggleFriends_Click"/>

                        <Button Content="_" Style="{StaticResource BotonControl}" Click="BtnMinimizar_Click" VerticalContentAlignment="Bottom" Padding="0,0,0,5"/>
                        <Button Content="▢" Style="{StaticResource BotonControl}" Click="BtnMaximizar_Click" FontSize="16"/>
                        <Button Content="X" Style="{StaticResource BotonControl}" Click="BtnSalir_Click" Foreground="#AAAAAA"/>
                    </StackPanel>
                </Grid>

                <Grid Grid.Row="1" Margin="20,0,20,0">
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                        <TextBlock x:Name="lblSeccionActual" Text="TIENDA" Foreground="White" FontSize="20" FontWeight="Bold" Margin="0,0,20,0" VerticalAlignment="Center"/>
                        <Border Width="1" Height="20" Background="#333333" Margin="0,0,20,0"/>

                        <TextBlock Text="ORDENAR:" Foreground="#888888" VerticalAlignment="Center" Margin="0,0,10,0" FontSize="11" FontWeight="Bold"/>

                        <Border Background="#1AFFFFFF" CornerRadius="15" Padding="3">
                            <StackPanel Orientation="Horizontal">
                                <Button x:Name="btnSortNombre" Content="NOMBRE" Width="80" Height="26" 
                                        Background="#0074E0" Foreground="White" FontWeight="Bold" FontSize="10" 
                                        BorderThickness="0" Cursor="Hand" Click="BtnSortNombre_Click">
                                    <Button.Resources>
                                        <Style TargetType="Border">
                                            <Setter Property="CornerRadius" Value="12"/>
                                        </Style>
                                    </Button.Resources>
                                </Button>

                                <Button x:Name="btnSortInstalado" Content="INSTALADO" Width="80" Height="26" 
                                        Background="Transparent" Foreground="#AAAAAA" FontWeight="Bold" FontSize="10" 
                                        BorderThickness="0" Cursor="Hand" Click="BtnSortInstalado_Click">
                                    <Button.Resources>
                                        <Style TargetType="Border">
                                            <Setter Property="CornerRadius" Value="12"/>
                                        </Style>
                                    </Button.Resources>
                                </Button>
                            </StackPanel>
                        </Border>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Center">
                        <Button x:Name="btnVistaLista" Content="≣" Click="BtnVistaLista_Click" Style="{StaticResource BotonVista}" Foreground="White" ToolTip="Vista Lista"/>
                        <Button x:Name="btnVistaGrid" Content="▦" Click="BtnVistaGrid_Click" Style="{StaticResource BotonVista}" ToolTip="Vista Cuadrícula"/>
                    </StackPanel>
                </Grid>

                <ScrollViewer Grid.Row="2" Margin="20,0,20,0" VerticalScrollBarVisibility="Hidden">
                    <StackPanel>
                        <Grid x:Name="PanelHero" Height="250" Margin="0,0,0,20" ClipToBounds="True">
                            <Image x:Name="imgHero" Stretch="UniformToFill" Opacity="0.8"/>
                            <Border>
                                <Border.Background>
                                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                        <GradientStop Color="#FF0F172A" Offset="0.0"/>
                                        <GradientStop Color="Transparent" Offset="0.7"/>
                                    </LinearGradientBrush>
                                </Border.Background>
                            </Border>
                            <StackPanel VerticalAlignment="Center" Margin="40,0,0,0">
                                <TextBlock Text="DESTACADO DE LA SEMANA" Foreground="#00C3FF" FontWeight="Bold" FontSize="12" Margin="0,0,0,5"/>
                                <TextBlock x:Name="txtHeroTitulo" Text="CYBERWAR 2077" Foreground="White" FontWeight="Black" FontSize="40" Margin="0,0,0,10"/>
                                <TextBlock x:Name="txtHeroDesc" Text="El futuro es ahora." Foreground="LightGray" FontSize="16" Margin="0,0,0,20"/>
                                <Button Content="VER MÁS" Width="120" Height="40" Background="White" Foreground="Black" FontWeight="Bold" Cursor="Hand" BorderThickness="0" Click="WIP_Click">
                                    <Button.Resources>
                                        <Style TargetType="Border">
                                            <Setter Property="CornerRadius" Value="5"/>
                                        </Style>
                                    </Button.Resources>
                                </Button>
                            </StackPanel>
                        </Grid>

                        <WrapPanel x:Name="ContenedorJuegos" Orientation="Horizontal" Width="NaN"/>
                    </StackPanel>
                </ScrollViewer>

                <Border Grid.Row="3" Background="#080808" BorderBrush="#333333" BorderThickness="0,1,0,0">
                    <Grid Margin="10,0">
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                            <TextBlock Text="●" Foreground="#2ECC71" FontSize="10" VerticalAlignment="Center" Margin="0,0,5,0"/>
                            <TextBlock Text="EN LÍNEA" Foreground="#AAAAAA" FontSize="10" FontWeight="Bold" VerticalAlignment="Center"/>
                        </StackPanel>

                        <StackPanel x:Name="PanelDescarga" Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center" Visibility="Hidden">
                            <TextBlock x:Name="txtEstadoDescarga" Text="Descargando..." Foreground="#00C3FF" FontSize="10" Margin="0,0,10,0" FontWeight="Bold"/>
                            <ProgressBar x:Name="pbDescarga" Width="200" Height="10" Minimum="0" Maximum="100" Value="0" Foreground="#2ECC71" Background="#333333" BorderThickness="0"/>
                            <TextBlock x:Name="txtPorcentajeDescarga" Text="0%" Foreground="White" FontSize="10" Margin="10,0,0,0"/>
                        </StackPanel>

                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Center">
                            <TextBlock Text="BiTronix v1.0.0" Foreground="#444444" FontSize="10"/>
                        </StackPanel>
                    </Grid>
                </Border>
            </Grid>

            <Border x:Name="PanelAmigos" Grid.Column="2" Width="250" Background="#121212" BorderBrush="#333333" BorderThickness="1,0,0,0" Visibility="Collapsed">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="50"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <TextBlock Text="AMIGOS - EN LÍNEA" Foreground="#AAAAAA" FontWeight="Bold" FontSize="11" Margin="15,20,0,0"/>

                    <ScrollViewer Grid.Row="1" Margin="0,10,0,0">
                        <StackPanel x:Name="ListaAmigos"/>
                    </ScrollViewer>
                </Grid>
            </Border>

            <Grid x:Name="OverlayDetalle" Grid.ColumnSpan="3" Visibility="Collapsed">
                <Border Background="#CC000000" MouseLeftButtonDown="BtnCerrarOverlay_Click"/>
                <Border Width="800" Height="500" Background="#151515" CornerRadius="10" BorderBrush="#333333" BorderThickness="1" VerticalAlignment="Center" HorizontalAlignment="Center" ClipToBounds="True">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="300"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <Image x:Name="imgOverlayBanner" Grid.Row="0" Stretch="UniformToFill" Opacity="0.8"/>
                        <Border Grid.Row="0" VerticalAlignment="Bottom" Height="150">
                            <Border.Background>
                                <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                    <GradientStop Color="Transparent" Offset="0"/>
                                    <GradientStop Color="#151515" Offset="1"/>
                                </LinearGradientBrush>
                            </Border.Background>
                        </Border>

                        <StackPanel Grid.Row="0" VerticalAlignment="Bottom" Margin="30,0,0,10">
                            <TextBlock x:Name="txtOverlayTitulo" Text="TÍTULO" Foreground="White" FontWeight="Black" FontSize="42"/>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock x:Name="txtOverlayGenero" Text="GENERO" Foreground="#00C3FF" FontSize="14" FontWeight="Bold" Margin="0,0,20,0"/>
                                <TextBlock x:Name="txtOverlayPrecio" Text="0.00 €" Foreground="#FFD700" FontSize="14" FontWeight="Bold"/>
                            </StackPanel>
                        </StackPanel>

                        <Button Content="X" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,15,15,0" Width="40" Height="40" Background="#33000000" Foreground="White" FontWeight="Bold" Click="BtnCerrarOverlay_Click" Cursor="Hand" Style="{StaticResource BotonControl}"/>

                        <Grid Grid.Row="1" Margin="30,20,30,30">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="200"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock x:Name="txtOverlayDesc" Grid.Column="0" Text="Desc..." Foreground="#CCCCCC" TextWrapping="Wrap" FontSize="16" LineHeight="24"/>
                            <StackPanel Grid.Column="1" VerticalAlignment="Bottom">
                                <TextBlock Text="ESTADO:" Foreground="#888888" FontSize="12" FontWeight="Bold" Margin="0,0,0,5"/>
                                <TextBlock x:Name="txtOverlayEstado" Text="INSTALADO" Foreground="#00FF00" FontSize="14" FontWeight="Bold" Margin="0,0,0,20"/>
                                <Button x:Name="btnOverlayAccion" Click="BtnAccionOverlay_Click" Content="JUGAR" Height="50" Background="#0074E0" Foreground="White" FontWeight="Bold" FontSize="18" Cursor="Hand">
                                    <Button.Template>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}" CornerRadius="5">
                                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Button.Template>
                                </Button>
                            </StackPanel>
                        </Grid>
                    </Grid>
                </Border>
            </Grid>

            <Grid x:Name="OverlayPerfil" Grid.ColumnSpan="3" Visibility="Collapsed">
                <Border Background="#CC000000" MouseLeftButtonDown="BtnCerrarOverlay_Click"/>
                <Border Width="500" MaxHeight="650" VerticalAlignment="Center" HorizontalAlignment="Center" Background="#151515" CornerRadius="10" BorderBrush="#333333" BorderThickness="1">
                    <ScrollViewer VerticalScrollBarVisibility="Auto" Margin="0,10,0,10">
                        <StackPanel Margin="40,20,40,40">
                            <TextBlock Text="EDITAR PERFIL" Foreground="White" FontSize="24" FontWeight="Bold" Margin="0,0,0,30"/>
                            <TextBlock Text="ELIGE TU AVATAR" Foreground="#AAAAAA" FontSize="11" FontWeight="Bold" Margin="0,0,0,10"/>
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,25">
                                <Button x:Name="btnAvatarAzul" Width="50" Height="50" Margin="0,0,15,0" Cursor="Hand" Click="CambiarAvatar_Click">
                                    <Button.Template>
                                        <ControlTemplate>
                                            <Border CornerRadius="25" Background="#151515" BorderBrush="#00C3FF" BorderThickness="2">
                                                <Ellipse Width="40" Height="40" Fill="#00C3FF"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Button.Template>
                                </Button>
                                <Button x:Name="btnAvatarRojo" Width="50" Height="50" Margin="0,0,15,0" Cursor="Hand" Click="CambiarAvatar_Click">
                                    <Button.Template>
                                        <ControlTemplate>
                                            <Border CornerRadius="25" Background="#151515" BorderBrush="#FF4444" BorderThickness="2">
                                                <Ellipse Width="40" Height="40" Fill="#FF4444"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Button.Template>
                                </Button>
                                <Button x:Name="btnAvatarVerde" Width="50" Height="50" Margin="0,0,15,0" Cursor="Hand" Click="CambiarAvatar_Click">
                                    <Button.Template>
                                        <ControlTemplate>
                                            <Border CornerRadius="25" Background="#151515" BorderBrush="#2ECC71" BorderThickness="2">
                                                <Ellipse Width="40" Height="40" Fill="#2ECC71"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Button.Template>
                                </Button>
                                <Button x:Name="btnAvatarMorado" Width="50" Height="50" Margin="0,0,15,0" Cursor="Hand" Click="CambiarAvatar_Click">
                                    <Button.Template>
                                        <ControlTemplate>
                                            <Border CornerRadius="25" Background="#151515" BorderBrush="#9B59B6" BorderThickness="2">
                                                <Ellipse Width="40" Height="40" Fill="#9B59B6"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Button.Template>
                                </Button>
                            </StackPanel>
                            <TextBlock Text="NOMBRE DE USUARIO" Foreground="#AAAAAA" FontSize="11" FontWeight="Bold" Margin="0,0,0,5"/>
                            <TextBox x:Name="txtEditUser" Style="{StaticResource InputSettings}" Margin="0,0,0,15"/>
                            <TextBlock Text="EMAIL" Foreground="#AAAAAA" FontSize="11" FontWeight="Bold" Margin="0,0,0,5"/>
                            <TextBox x:Name="txtEditEmail" Text="usuario@bitronix.com" Style="{StaticResource InputSettings}" Foreground="White" Margin="0,0,0,30"/>
                            <Separator Background="#333333" Margin="0,0,0,20"/>
                            <TextBlock Text="SEGURIDAD" Foreground="White" FontSize="16" FontWeight="Bold" Margin="0,0,0,15"/>
                            <TextBlock Text="CONTRASEÑA ACTUAL" Foreground="#AAAAAA" FontSize="11" FontWeight="Bold" Margin="0,0,0,5"/>
                            <Grid Margin="0,0,0,15">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="40"/>
                                </Grid.ColumnDefinitions>
                                <Border Background="#202020" CornerRadius="5" BorderBrush="#333333" BorderThickness="1" Height="35">
                                    <Grid>
                                        <PasswordBox x:Name="txtEditPassOld" Style="{StaticResource InputSettingsPass}"/>
                                        <TextBox x:Name="txtEditPassOldVisible" Visibility="Collapsed" Style="{StaticResource InputSettings}"/>
                                    </Grid>
                                </Border>
                                <Button Grid.Column="1" VerticalAlignment="Bottom" Height="35" Style="{StaticResource BotonOjoSmall}" Click="TogglePassOld_Click"/>
                            </Grid>
                            <TextBlock Text="NUEVA CONTRASEÑA" Foreground="#AAAAAA" FontSize="11" FontWeight="Bold" Margin="0,0,0,5"/>
                            <Grid Margin="0,0,0,15">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="40"/>
                                </Grid.ColumnDefinitions>
                                <Border Background="#202020" CornerRadius="5" BorderBrush="#333333" BorderThickness="1" Height="35">
                                    <Grid>
                                        <PasswordBox x:Name="txtEditPassNew" Style="{StaticResource InputSettingsPass}"/>
                                        <TextBox x:Name="txtEditPassNewVisible" Visibility="Collapsed" Style="{StaticResource InputSettings}"/>
                                    </Grid>
                                </Border>
                                <Button Grid.Column="1" VerticalAlignment="Bottom" Height="35" Style="{StaticResource BotonOjoSmall}" Click="TogglePassNew_Click"/>
                            </Grid>
                            <TextBlock Text="CONFIRMAR NUEVA" Foreground="#AAAAAA" FontSize="11" FontWeight="Bold" Margin="0,0,0,5"/>
                            <Grid Margin="0,0,0,30">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="40"/>
                                </Grid.ColumnDefinitions>
                                <Border Background="#202020" CornerRadius="5" BorderBrush="#333333" BorderThickness="1" Height="35">
                                    <Grid>
                                        <PasswordBox x:Name="txtEditPassConfirm" Style="{StaticResource InputSettingsPass}"/>
                                        <TextBox x:Name="txtEditPassConfirmVisible" Visibility="Collapsed" Style="{StaticResource InputSettings}"/>
                                    </Grid>
                                </Border>
                                <Button Grid.Column="1" VerticalAlignment="Bottom" Height="35" Style="{StaticResource BotonOjoSmall}" Click="TogglePassConfirm_Click"/>
                            </Grid>
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                                <Button Content="CANCELAR" Width="100" Height="40" Background="Transparent" Foreground="White" Margin="0,0,10,0" Click="BtnCerrarOverlay_Click">
                                    <Button.Template>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}">
                                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Button.Template>
                                </Button>
                                <Button Content="GUARDAR" Width="120" Height="40" Background="#0074E0" Foreground="White" FontWeight="Bold" Cursor="Hand" Click="BtnGuardarPerfil_Click">
                                    <Button.Template>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}" CornerRadius="5">
                                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Button.Template>
                                </Button>
                            </StackPanel>
                        </StackPanel>
                    </ScrollViewer>
                </Border>
            </Grid>

            <Grid x:Name="OverlayAjustes" Grid.ColumnSpan="3" Visibility="Collapsed">
                <Border Background="#CC000000" MouseLeftButtonDown="BtnCerrarOverlay_Click"/>
                <Border Width="500" Height="400" Background="#151515" CornerRadius="10" BorderBrush="#333333" BorderThickness="1" VerticalAlignment="Center" HorizontalAlignment="Center">
                    <StackPanel Margin="30">
                        <TextBlock Text="AJUSTES DE LA APLICACIÓN" Foreground="White" FontSize="20" FontWeight="Bold" Margin="0,0,0,30"/>
                        <TextBlock Text="RUTA DE INSTALACIÓN" Foreground="#AAAAAA" FontSize="11" FontWeight="Bold" Margin="0,0,0,5"/>
                        <Grid Margin="0,0,0,20">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBox Text="C:\Games\BiTronix" Style="{StaticResource InputSettings}" IsReadOnly="True" Foreground="#888888"/>
                            <Button Content="..." Grid.Column="1" Width="40" Margin="10,0,0,0" Background="#333333" Foreground="White" BorderThickness="0">
                                <Button.Template>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}" CornerRadius="5">
                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Button.Template>
                            </Button>
                        </Grid>
                        <CheckBox Content="Mantener juegos actualizados automáticamente" Foreground="White" Margin="0,0,0,15" IsChecked="True"/>
                        <CheckBox Content="Mostrar notificaciones de escritorio" Foreground="White" Margin="0,0,0,15" IsChecked="True"/>
                        <CheckBox Content="Minimizar a la bandeja del sistema al cerrar" Foreground="White" Margin="0,0,0,30"/>
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                            <Button Content="CERRAR" Width="100" Height="40" Background="#0074E0" Foreground="White" Click="BtnCerrarOverlay_Click">
                                <Button.Template>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}" CornerRadius="5">
                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Button.Template>
                            </Button>
                        </StackPanel>
                    </StackPanel>
                </Border>
            </Grid>

            <Grid x:Name="OverlayWIP" Grid.ColumnSpan="3" Visibility="Collapsed">
                <Border Background="#CC000000" MouseLeftButtonDown="BtnCerrarOverlay_Click"/>
                <Border Width="400" Height="250" Background="#151515" CornerRadius="10" BorderBrush="#333333" BorderThickness="1" VerticalAlignment="Center" HorizontalAlignment="Center">
                    <StackPanel Margin="30" HorizontalAlignment="Center" VerticalAlignment="Center">
                        <TextBlock Text="🚧" FontSize="40" HorizontalAlignment="Center" Margin="0,0,0,15"/>
                        <TextBlock Text="PRÓXIMAMENTE" Foreground="White" FontSize="20" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,10"/>
                        <TextBlock Text="Estamos trabajando duro para traerte esta función en BiTronix 2.0." Foreground="Gray" TextWrapping="Wrap" TextAlignment="Center" Margin="0,0,0,25"/>
                        <Button Content="ENTENDIDO" Width="120" Height="40" Background="#0074E0" Foreground="White" FontWeight="Bold" Click="BtnCerrarOverlay_Click">
                            <Button.Template>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}" CornerRadius="5">
                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Button.Template>
                        </Button>
                    </StackPanel>
                </Border>
            </Grid>

        </Grid>
    </Border>
</Window>