<Window x:Class="GameLauncher.BiTronixMsgBox"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="BiTronix Message" Height="250" Width="450"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        Topmost="True"
        ResizeMode="NoResize">

    <Border x:Name="BordePrincipal" Background="#121212" CornerRadius="8" BorderThickness="2" BorderBrush="#0074E0">
        <Border.Effect>
            <DropShadowEffect Color="Black" BlurRadius="20" ShadowDepth="5" Opacity="0.8"/>
        </Border.Effect>

        <Grid Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,15">
                <TextBlock x:Name="txtIcono" Text="ℹ️" FontSize="24" Margin="0,0,10,0" VerticalAlignment="Center"/>
                <TextBlock x:Name="txtTitulo" Text="INFORMACIÓN" Foreground="White" FontSize="18" FontWeight="Bold" VerticalAlignment="Center"/>
            </StackPanel>

            <TextBlock Grid.Row="1" x:Name="txtMensaje" Text="Mensaje de ejemplo..." Foreground="#CCCCCC" TextWrapping="Wrap" FontSize="14" VerticalAlignment="Center"/>

            <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,15,0,0">

                <Button x:Name="btnCancel" Content="CANCELAR" Width="100" Height="35" Margin="0,0,10,0"
                        Background="Transparent" Foreground="#888888" BorderBrush="#444" BorderThickness="1"
                        Visibility="Collapsed" Click="BtnCancel_Click">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}" CornerRadius="4">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                </Button>

                <Button x:Name="btnOk" Content="ENTENDIDO" Width="120" Height="35"
                        Background="#0074E0" Foreground="White" FontWeight="Bold" BorderThickness="0"
                        Click="BtnOk_Click">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border x:Name="borde" Background="{TemplateBinding Background}" CornerRadius="4">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter TargetName="borde" Property="Opacity" Value="0.8"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
            </StackPanel>
        </Grid>
    </Border>
</Window>